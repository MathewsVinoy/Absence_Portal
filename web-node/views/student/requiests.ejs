<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Requiests</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="css/mainpage.css" rel="stylesheet" />
    <style>
      .custom-btn {
        color: white;
        background-color: #004080;
      }
      .custom-btn:hover {
        color: white;
        background-color: #015fbd;
      }
    </style>
  </head>
  <body>
    <!-- Sidebar with integrated toggle button -->
    <div class="sidebar" id="sidebar">
      <!-- Toggle Button -->
      <button class="toggle-btn" onclick="toggleSidebar()">
        <span class="icon">â˜°</span>
      </button>

      <div class="sidebar-header">
        <div
          class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-light text-decoration-none"
        >
          <span class="fs-4">Sidebar</span>
        </div>
      </div>
      <hr />
      <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
          <a href="/student" class="nav-link link-light" aria-current="page">
            Home
          </a>
        </li>
        <li>
          <a href="/student-requiests" class="nav-link active">Requiests</a>
        </li>
      </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
      <h1 class="text-center">Student Requiests</h1>
      <ul class="list-group">
        <% values.forEach((value, index) => { %>
        <li
          id="item-<%= index %>"
          class="list-group-item justify-content-between align-items-center shadow-sm p-3 mb-3 rounded"
        >
          <div class="align-items-center ms-3">
            <h4 class="mb-1 text-muted">
              Date: <%= new Date(value.indata).toISOString().split('T')[0] %>
            </h4>
            <p class="mb-1 text-muted">Admission No: <%= value.admno %></p>
            <p class="mb-1 text-muted">Reason: <%= value.reason %></p>
            <p class="mb-1 text-muted">Status: <%= value.state %></p>
            <p class="mb-1 text-muted">Out Status: <%= value.outstatus %></p>
          </div>
        </li>
        <% }) %>
      </ul>
    </div>

    <script src="js/toggle_btn.js"></script>
  </body>
</html>
